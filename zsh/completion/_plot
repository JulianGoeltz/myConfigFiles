#compdef plot.py
_plot() {
	_arguments \
	  "1::command:(animate_training plot_training plot_volts plot_featureMatrix plot_weightEvolutionDetailed plot_raster plot_weightHist plot_weightEvolutionIndividual plot_weightEvolution evaluate_training plot_seedsweep_sweepFurther plot_seedsweep plot_seedsweep_sweep )" \
	  "2::hdf5/pkl to use:->files" && return 0
	# '*::command: _normal'
	# '*::args:->command' "$common[@]" && ret=0
	case $state in
		files)
			_files -g "*(.hdf5|.pkl)"
			;;
	esac
	return
}
_plot "$@"

