#compdef plot.py
_plot() {
	_arguments \
	  "1::command:(animate_training plot plot_featureMatrix plot_weightEvolutionDetailed plot_raster plot_weightHist plot_weightEvolution evaluate_training plot_seedsweep_sweepFurther plot_seedsweep plot_seedsweep_sweep produce_training_eval_data)" \
	  "2::hdf5 to use:->files" && return 0
	# '*::command: _normal'
	# '*::args:->command' "$common[@]" && ret=0
	case $state in
		files)
			_files -g "*.hdf5"
			;;
	esac
	return
}
_plot "$@"

