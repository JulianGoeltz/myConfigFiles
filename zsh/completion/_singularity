#compdef singularity
_singularity() {
	_arguments \
	  ":command:(exec shell)" \
	  ":--app:(--app)" \
	  ":app:(visionary-wafer)" \
	  ":container image to use:->files" \
	  "*:::args:->comd" && return 0
	# '*::command: _normal'
	# '*::args:->command' "$common[@]" && ret=0
	case $state in
		files)
			_files
			return
			;;
		(comd)
			# (( CURRENT-- ))
			# shift 1 words
			_normal
			return
			;;
	esac
	return
}
_singularity "$@"
