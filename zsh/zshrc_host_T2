timer() {
	local t=$1 && shift
	[ $# -gt 0 ] && local message="$@" || local message="time's up"
	(sleep $t && (cvlc ~/Music/bell.mp3 vlc://quit &;
	              dunstify -t 10000 "$message")
	) &!
	echo "set timer for $t"
}

