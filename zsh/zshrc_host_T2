# copy files to android phone connected via USB
adb_transfer() {
	if [ "$#" -eq 0 ]; then
		echo "transfers all files given in args[1:] to folder args[0]"
		echo "to find correct folder explore with 'aft-mtp-cli' (and create it)"
		return
	fi
	folder=$1
	shift
	for f in $@; do
		aft-mtp-cli "cd ${folder}" "put \"${f}\""
	done
}

